    <script>
        // Animasi logo
        const logo = document.getElementById('logo');
        gsap.to(logo, {duration: 2, rotation: 360, repeat: -1, ease: "elastic.out(1, 0.3)"});

        // Data produk
        const products = [
            {name: "Sepatu Running Ortuseight Solar", price: 1200000, image: "https://sportaways.com/media/catalog/product/cache/cd7c6c71a47e90564e17811b95cac4e3/o/r/ortuseight_solar_-_off_whiteortrange_1.jpg"},
            {name: "Sepatu Running Nike journey Run", price: 1399000, image: "https://static.nike.com/a/images/c_limit,w_592,f_auto/t_product_v1/3bb1a237-6b87-470b-85a6-a414a3c8e81e/NIKE+JOURNEY+RUN.png"},
            {name: "Sepatu Running Adidas Adizero Adios Pro 3", price: 3914500, image: "https://assets.adidas.com/images/w_940,f_auto,q_auto/7c2ecb5e638a4dc4b2e4af87010a3290_9366/GW7258_01_standard.jpg"},
            {name: "Al Nassr FC 24/25 Home Jersey", price: 2036378, image: "https://assets.adidas.com/images/h_840,f_auto,q_auto,fl_lossy,c_fill,g_auto/4637af8460a340dda6fedf8f8bd1c799_9366/Al_Nassr_FC_24-25_Ronaldo_Home_Jersey_Yellow_JP0459_01_laydown.jpg"},
            {name: "Indonesia 2018 Nike Away Kit", price: 1200000, image: "https://www.footballshirtculture.com/images/stories/indonesia-2018-nike-away-kit/indonesia_2018_nike_away_kit_a.jpg"},
            {name: "Argentina 2024 Adidas Home Kit", price: 2036378, image: "https://www.footballshirtculture.com/images/cwgallery/2303-argentina-2024-adidas-home-kit/thumb_2303_argentina_2024_adidas_home_kit_i1%201.jpg"}
        ];

        // Fungsi untuk menampilkan produk
        function displayProducts() {
            const productsContainer = document.getElementById('products');
            products.forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                productCard.innerHTML = `
                    <img src="${product.image}" alt="${product.name}">
                    <div class="product-info">
                        <h3 class="product-title">${product.name}</h3>
                        <p class="product-price">Rp ${product.price.toLocaleString()}</p>
                        <button class="buy-btn">Beli Sekarang</button>
                    </div>
                `;
                productsContainer.appendChild(productCard);
            });
        }

        // Menampilkan produk saat halaman dimuat
        window.onload = displayProducts;

        // Animasi untuk tombol Beli Sekarang
        document.addEventListener('click', function(e) {
            if(e.target && e.target.className == 'buy-btn') {
                gsap.to(e.target, {duration: 0.1, scale: 0.95, yoyo: true, repeat: 1});
                alert('Produk ditambahkan ke keranjang!');
            }
        });

        // Animasi untuk ikon keranjang
        const cartIcon = document.getElementById('cart-icon');
        cartIcon.addEventListener('click', function() {
            gsap.to(this, {duration: 0.5, y: -20, yoyo: true, repeat: 1});
            alert('Keranjang belanja Anda');
        });

        // Animasi untuk special offer
        gsap.to('#specialOffer', {duration: 1, opacity: 0.8, yoyo: true, repeat: -1});
    </script>
